<FluentHeader Style="margin-bottom:5px;">
    @Header
    <FluentSpacer Width="10" />
    <FluentCheckbox @bind-Value="@ShowNarrative">@showHideNarrative</FluentCheckbox>
</FluentHeader>

<FluentCard Class="@narrativeClass" MinimalStyle="true" Height="auto" Style="margin-bottom:5px;">
    <FluentStack Orientation="Orientation.Vertical">
        @ChildContent
        <FluentStack>
            @{
                if (!string.IsNullOrWhiteSpace(HRefCode))
                {
                    <a href="@HRefCode" target="_blank">@HRefCodeLabel</a>
                }
            }
            @{
                if (!string.IsNullOrWhiteSpace(HRefDocs))
                {
                    <a href="@HRefDocs" target="_blank">@HRefDocsLabel</a>
                }
            }
        </FluentStack>
    </FluentStack>
</FluentCard>

<style>
    .hidden {
        display: none;
    }
</style>

@code {
    private string narrativeClass => ShowNarrative ? "" : "hidden";
    private string showHideNarrative => ShowNarrative ? "Hide Info" : "Show Info";

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter, EditorRequired]
    public string Header { get; set; }

    [Parameter, EditorRequired]
    public string HRefCode { get; set; }

	[Parameter]
	public string? HRefCodeLabel { get; set; } = "Source Code";

    [Parameter]
    public string? HRefDocs { get; set; }

    [Parameter]
    public string? HRefDocsLabel { get; set; } = "Azure SDK Docs";

    [Parameter]
    public bool ShowNarrative { get; set; } = true;
}
